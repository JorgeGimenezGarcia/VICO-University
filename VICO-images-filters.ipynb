from matplotlib import pyplot as plt
import cv2
import numpy as np
import os
!wget https://upload.wikimedia.org/wikipedia/commons/e/ed/Elon_Musk_Royal_Society.jpg -O img.jpg

def apply_convolution(img, kernel):
	
	#con el kernel.shape sacamos el numero de filas y de columnas que tenemos en el
	#m = filas
	#n = columnas
	filas, columnas = kernel.shape
	y, x = img.shape
	#Estas dos lineas nos sirven para coger las esquinas.
	y = y - filas + 1
	x = x - filas + 1
	new_image = np.zeros((y,x))
	#Este seria la operacion de correlacion cruzada: G= H * F 
	for i in range(y):
		for j in range(x):
			new_image[i][j] = np.sum(img[i:i+filas, j:j+columnas]*kernel)
	
	return new_image



blur = np.ones((9, 9), dtype="float") / 81

sharpen = np.array((
	[0, -1, 0],
	[-1, 5, -1],
	[0, -1, 0]), dtype="int")

edge_h = np.array((
	[-1, 0, 1],
	[-2, 0, 2],
	[-1, 0, 1]), dtype="int")

edge_v = np.array((
	[-1, -2, -1],
	[0, 0, 0],
	[1, 2, 1]), dtype="int")

gaussian = np.array((
	[0, 1, 0],
	[1, -4, 1],
	[0, 1, 0]), dtype="int")

"""## Resultado

